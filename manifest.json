{
  "manifest_version": 2,

  "name": "Copy Host",
  "short_name": "copyhost",
  "description": "This extension allows you to copy current hostname to the clipboard.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon16.png",
    "default_title": "Press the button to copy the hostname to the clipboard"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  
  "icons": { 
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "permissions": [
    "activeTab"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+C"
      }
    }
  }
}
